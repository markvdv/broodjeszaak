

        <form class="bestelmenu" action="bestelmenucontroller.php?action=voegtoe" method="POST">
            <select name="brood" size="5" required>
                {% for brood in bestelmenu.broden %}
                    <option value="{{ brood.type }}">{{ brood.type }} &euro;{{ brood.prijs/100 }}
                    </option>
                {% endfor %}
            </select>  
            <select name="beleg[]" size="5" multiple="multiple" >
                {% for beleg in bestelmenu.beleg %}
                    <option value="{{ beleg.type }}">{{ beleg.type }} &euro;{{ beleg.prijs / 100}} 
                    </option>
                {% endfor %}
            </select>  
            <input class="voegtoe" name="submit" type="submit" value="voeg toe"> 
        </form>
